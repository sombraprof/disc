{
  "name": "spa-starter",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -c tailwind.config.cjs -i src/styles/tailwind.css -o css/tailwind.css --minify",
    "build:dist": "node scripts/build-dist.mjs",
    "build:disciplines": "node scripts/generate-disciplines.mjs",
    "build": "npm run build:css && npm run build:disciplines && npm run build:dist",
    "ci": "npm run build && node ./scripts/validate-data.mjs && node ./scripts/check-links.mjs",
    "lint": "eslint . --ext .js,.mjs,.cjs",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.25.9",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "pa11y-ci": "^4.0.1",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "workbox-build": "^7.1.1"
  }
}
